---
import { Button } from "@/components/ui/Button";
import Input from "@/components/ui/Input.astro";
import AuthLayout from "@/layouts/AuthLayout.astro";
import { Image } from "astro:assets";

const title = "Iniciar Sesión";
---

<AuthLayout title={title}>
    <div
        class="p-2 h-screen w-screen flex flex-col justify-center items-center"
    >
        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-4 p-2 md:p-6 w-full h-full md:w-10/12 md:h-10/12"
        >
            <div
                class="bg-white rounded-xl py-16 px-4 md:p-4 lg:p-8 flex flex-col justify-between shadow-md"
            >
                <h2 class="text-4xl font-medium">Iniciar Sesión</h2>

                <form class="flex flex-col gap-16 md:gap-4">
                    <div class="flex flex-col gap-1">
                        <label for="email" class="pl-2"> Email: </label>
                        <Input type="email" name="email" />
                    </div>

                    <div class="flex flex-col gap-2">
                        <label for="password" class="pl-2">Contraseña:</label>
                        <Input type="password" name="password" />
                    </div>

                    <div>
                        <Button variant="secondary"> Acceder </Button>
                    </div>
                </form>

                <p>
                    ¿No tenés cuenta?
                    <a href="/signup" class="underline text-red-500">
                        Crear usuario
                    </a>
                </p>
            </div>
            <div class="hidden md:flex rounded-xl overflow-hidden shadow-md">
                <Image
                    src="https://utfs.io/f/48951d14-9d05-4eed-b36a-333dad2414d3-6jtb1.jpg"
                    alt="polo tecnológico"
                    inferSize
                />
            </div>
        </div>
    </div>
</AuthLayout>
