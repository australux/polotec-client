---
import Textarea from "@/components/ui/Textarea.astro";
import Select from "@/components/ui/Select.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Send } from "@/components/ui/SVGs";
import { Button } from "@/components/ui/Button";

const title = "Beneficios Provinciales";
---

<BaseLayout title={title}>
    <section
        class="h-full w-full max-w-screen-xl flex flex-col justify-center gap-4 py-6 lg:gap-10 lg:py-10 px-2"
    >
        <h1 class="text-4xl text-red-500 font-bold">{title}</h1>
        <div class="flex flex-col gap-2 items-center">
            <div class="flex flex-col items-center gap-6 w-full md:w-3/5">
                <h2 class="lg:text-xl font-semibold text-gray-700">
                    Solicitud de subsidios fiscales y beneficios en bienes
                    públicos
                </h2>

                <form
                    class="flex flex-col gap-8 p-8 bg-white rounded-3xl w-full"
                >
                    <div class="flex flex-col gap-2">
                        <label for="servicio-solicitado" class="text-gray-700">
                            Servicio solicitado:
                        </label>
                        <Select name="servicio-solicitado">
                            <option selected hidden></option>
                            <option value="coworking">Coworking</option>
                            <option value="líneas de crédito preferenciales">
                                Líneas de crédito preferenciales
                            </option>
                            <option value="programa pril">
                                Programa PRIL
                            </option>
                            <option value="programa tecnoempleo">
                                Programa Tecnoempleo
                            </option>
                            <option value="servicios en la nube">
                                Servicios en la nube
                            </option>
                            <option value="subsidio energía eléctrica">
                                Subsidios de energía eléctrica
                            </option>
                            <option value="subsidio impuesto a los sellos">
                                Subsidio Impuesto a los Sellos
                            </option>
                            <option value="subsidio impuesto inmobiliario">
                                Subsidio Impuesto Inmobiliario
                            </option>
                            <option value="subsidio ingresos brutos">
                                Subsidio Ingresos Brutos
                            </option>
                            <option value="subsidio internet">
                                Subsidio Internet
                            </option>
                            <option
                                value="subsidio para certificados de calidad"
                            >
                                Subsidio para certificados de calidad
                            </option>
                            <option value="subsidio transporte público">
                                Subsidio Transporte Público
                            </option>
                        </Select>
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="detalle-asistencia" class="text-gray-700">
                            Detalle de la asistencia solicitada:
                        </label>
                        <Textarea name="detalle-asistencia" />
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="fundamentacion" class="text-gray-700">
                            Fundamente por qué y para qué solicita el servicio:
                        </label>
                        <Textarea name="fundamentacion" />
                    </div>
                    <div class="flex justify-end">
                        <Button variant="secondary">
                            Enviar
                            <Send
                                className="text-red-500 w-5 h-5 group-hover:text-white transition-color duration-150"
                                strokeWidth="1.5"
                            />
                        </Button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</BaseLayout>
