---
import Header from "@/components/Header.astro";
import { Image } from "astro:assets";

interface Props {
    frontmatter: {
        body: string;
        data: {
            title: string;
            headline: string;
            image: {
                src: string;
                alt: string;
            };
        };
    };
}

const { frontmatter } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
        <link rel="icon" type="image/png" href="/logo.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.data.title}</title>
    </head>
    <body class="font-work antialiased relative flex flex-col bg-zinc-50">
        <Header />
        <main
            class="h-full w-full min-h-[calc(100vh_-_15.625rem)] flex flex-col items-center"
        >
            <section
                class="h-full w-[1280px] flex flex-col justify-center gap-10 py-10"
            >
                <div
                    class="h-[600px] flex flex-col items-center justify-center rounded-xl relative overflow-clip"
                >
                    <div
                        class="bg-zinc-950 opacity-55 h-full w-full absolute top-0 z-20"
                    >
                    </div>
                    <Image
                        src={frontmatter.data.image.src}
                        alt={frontmatter.data.image.alt}
                        width={100}
                        height={100}
                        class="w-full"
                    />
                    <div
                        class="w-5/6 flex flex-col gap-8 absolute top-1/2 left-1/2 -translate-x-[50%] -translate-y-[50%] z-50"
                    >
                        <h1 class="text-5xl text-white font-bold">
                            {frontmatter.data.title}
                        </h1>
                        <h2 class="text-lg text-zinc-100 font-medium">
                            {frontmatter.data.headline}
                        </h2>
                    </div>
                </div>

                <slot />
            </section>
        </main>
    </body>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap");
    </style>
</html>
