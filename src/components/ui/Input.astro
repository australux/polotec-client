---
interface Props {
    type: "text" | "email" | "password" | "number" | "file";
    name: string;
}

const { type, name } = Astro.props;
---

<input
    name={name}
    id={name}
    type={type}
    class="p-2 rounded-lg bg-gray-50 hover:ring-1 hover:ring-red-100 focus:outline-none focus:ring-1 focus:ring-red-300 focus:bg-red-50"
/>
