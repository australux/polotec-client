---
interface Props {
    variant: "primary" | "secondary";
}

const { variant } = Astro.props;
let bgColor;
let textColor;
let hover;

if (variant == "secondary") {
    bgColor = "transparent border-2 border-red-500";
    textColor = "text-red-500";
    hover = "hover:bg-red-600 hover:text-white hover:border-red-500";
} else {
    bgColor = "bg-red-500";
    textColor = "text-white";
    hover = "hover:ring hover:ring-red-300";
}
---

<button
    class=`inline-flex px-4 py-2 text-sm ${bgColor} ${textColor} ${hover} rounded-full drop-shadow-lg transition duration-150 font-medium`
>
    <slot />
</button>
