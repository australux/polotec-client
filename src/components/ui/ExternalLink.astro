---
import { ArrowUR } from "./SVGs";

interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;
---

<a href={href} class="inline-flex gap-1 drop-shadow group">
    {text}
    <ArrowUR
        className="w-3 h-3 text-gray-400 group-hover:text-red-600 transition-all duration-100"
        strokeWidth="3"
    />
</a>
