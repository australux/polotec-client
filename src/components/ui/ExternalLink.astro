---
import ArrowUR from "./svgs/ArrowUR.astro";

interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;
---

<a href={href} class="inline-flex gap-1 drop-shadow group">
    {text}
    <ArrowUR
        styles="w-3 h-3 text-gray-300 group-hover:text-red-500 transition-all duration-100"
        stroke="3"
    />
</a>
