---
interface Props {
    title: string;
    toDate: string;
    description: string;
    url: string;
}

const { title, toDate, description, url } = Astro.props;
---

<div
    class="p-4 rounded-lg flex flex-col gap-2 bg-white border-l-8 border-red-500 w-4/5"
>
    <div>
        <h3 class="text-xl font-medium pb-4 border-b">
            {title}
        </h3>
    </div>
    <div class="grid grid-cols-[1fr_3fr] text-sm pt-2">
        <div class="flex flex-col gap-4 justify-between font-medium">
            <p>Fecha límite</p>
            <p>Descripción</p>
            <p>Link</p>
        </div>
        <div class="flex flex-col gap-4 justify-between">
            <p>{toDate}</p>
            <p>
                {description}
            </p>
            <a
                class="hover:text-red-500 transition-colors duration-150 line-clamp-1"
                href={url}
                target="_blank"
            >
                {url}
            </a>
        </div>
    </div>
</div>
