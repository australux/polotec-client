---
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    name: string;
    title: string;
    email: string;
}

const { src, alt, name, title, email } = Astro.props;
---

<div
    class="flex flex-col gap-4 p-4 rounded-xl hover:bg-red-100 transition-colors duration-200"
>
    <Image
        src={src}
        alt={alt}
        inferSize
        class="rounded-lg h-full w-full drop-shadow-md"
    />
    <div class="flex flex-col gap-2">
        <h3 class="lg:text-lg font-semibold">{name}</h3>
        <p class="text-zinc-700 text-wrap text-sm lg:text-base">
            {title}
        </p>
        <p class="text-red-600 text-wrap text-sm lg:text-base">{email}</p>
    </div>
</div>
