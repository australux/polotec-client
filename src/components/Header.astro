---
import Button from "@/components/ui/Button.astro";
import ExternalLink from "./ui/ExternalLink.astro";
import Dropdown from "./ui/Dropdown.astro";
---

<header
    class="w-full flex justify-center fixed top-0 z-50 transition-colors duration-300"
    id="header"
>
    <div class="w-[1280px] h-[100px] flex items-center justify-between">
        <a href="/" class="h-full w-auto">
            <img
                src="https://utfs.io/f/aa3ce997-de98-408a-8812-dc2603f549c2-1zbfv.png"
                alt="Logo Polo Tecnológico"
                class="h-full"
            />
        </a>
        <nav class="w-[640px] relative">
            <ul class="flex justify-between">
                <li>
                    <Dropdown text="Servicios" options={["monos", "frances"]} />
                </li>
                <li>
                    <Dropdown text="Institucinal" options={["banana", "pan"]} />
                </li>
                <li>
                    <ExternalLink
                        href="https://polotec.ar/hackathon/"
                        text="Hackaton"
                    />
                </li>
                <li>
                    <ExternalLink
                        href="https://polotec.ar/gaming/"
                        text="Polo Gaming"
                    />
                </li>
                <li>
                    <ExternalLink
                        href="http://www.polotec.ar/campus/"
                        text="Campus"
                    />
                </li>
            </ul>
        </nav>
        <Button variant="primary">Iniciar Sesión</Button>
    </div>
</header>

<script>
    const nav = document.querySelector("#header");
    window.onscroll = () => {
        nav?.classList.toggle("bg-[#fecacaf2]", window.scrollY > 120);
    };
</script>
