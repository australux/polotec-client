---
import { Image } from "astro:assets";

interface Props {
    title: string;
    headline: string;
    url?: string;
    src: string;
    alt: string;
}

const { title, headline, url, src, alt } = Astro.props;
---

<a href={`/novedades/${url}`}>
    <div
        class="flex flex-col-reverse sm:grid sm:grid-cols-[4fr_3fr] items-center gap-2 p-4 rounded-xl hover:bg-red-400 hover:drop-shadow-md transition-all duration-200 lg:min-h-[200px]"
    >
        <div class="flex flex-col gap-2">
            <h3 class="md:text-lg text-zinc-50 font-medium line-clamp-2">
                {title}
            </h3>
            <p class="text-sm text-wrap text-zinc-200 line-clamp-4">
                {headline}
            </p>
        </div>
        <div
            class="rounded-lg aspect-video overflow-hidden h-full w-full flex justify-center items-center"
        >
            <Image
                src={src}
                alt={alt}
                width={100}
                height={100}
                class="h-full w-full object-cover"
            />
        </div>
    </div>
</a>
