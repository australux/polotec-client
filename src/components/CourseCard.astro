---
import { Image } from "astro:assets";

interface Props {
    title: string;
    description: string;
    url: string;
    src: string;
    alt: string;
}

const { title, description, url, src, alt } = Astro.props;
---

<a
    href={url}
    target="_blank"
    class="flex flex-col gap-2 p-4 rounded-xl hover:bg-red-400 hover:drop-shadow-md transition-all duration-200"
>
    <Image
        src={src}
        alt={alt}
        width={100}
        height={100}
        class="rounded-lg aspect-square h-auto w-auto"
    />
    <div class="flex flex-col gap-2">
        <h3 class="text-xl text-zinc-50 font-medium line-clamp-2">
            {title}
        </h3>
        <p class="text-wrap text-zinc-200 line-clamp-5">
            {description}
        </p>
    </div>
</a>
